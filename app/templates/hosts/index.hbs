<h1>Hosts</h1>
<table class="table table-striped">
  <tbody>
  <tr>
    <th>#</th>
    <th>Public DNS name</th>
    <th>Private DNS name</th>
    <th></th>
  </tr>
  {{#each host in model}}
    <tr>
      <td>{{host.instanceId}}</td>
      <td>{{host.dnsName}}</td>
      <td>{{host.privateDnsName}}</td>
      <td class="actions">
        {{#link-to 'hosts.show' host class="btn btn-default btn-xs"}}<em class="fa fa-search"></em>{{/link-to}}
        {{#link-to 'hosts.show.edit' host class="btn btn-default btn-xs"}}<em class="fa fa-pencil"></em>{{/link-to}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
